<div class="footer-push">
  <h1 style="font-family: Raleway">Quickly pick a <select name="generate"><option value="password">password</option><option value="passphrase">passphrase</option></select></h1>

  <% if params[:generate] == "password" %>
  <form action="/password_pages" name="pick_password">
    <div>
      <label for="security">how many characters?</label><br />
      <select name="security">
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>
        <option value="11">11</option>
        <option value="12">12</option>
      </select>
    </div>
    <div>
      <input type="submit">
    </div>
  </form>

    <!-- Default panel contents -->
 <div style="padding-top: 30px;">
  <div class="password-info">
      <%= @password_pages %>
    <%= @password_encrypted %>
    </div>
    <div>
      <label for="security">security level:</label><br />
      <% if params['security'] == "6" %>
      <h4>Weak</h4>
      <% elsif params['security'] == "7" || params['security'] == "8"  || params['security'] == "9"  %>
          <h4>Medium</h4>
      <% elsif params['security'] == "10"|| params['security'] == "11" || params['security'] == "12" %>
          <h4>Strong</h4>
      <% end %>
    </div>
<p><a class="glyphicon glyphicon-repeat">Or refresh the page for another password that is  <%= params['security'] %> characters long</a></p>
  </div>
</div>
<% end %>
<% if params[:generate] == "passphrase"%>
<form action="/passphrases" name="pick_passphrase">
    <div>
      <label for="security">how many words?</label><br />
      <select name="security">
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
      </select>
    </div>
    <div>
      <input type="submit">
    </div>
  </form>
<% end %>